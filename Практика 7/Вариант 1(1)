def x(figura):
    if figura == "круг":
        res = 3,14 * (a ** 2)
    if figura == "треугольник":
        res = (a + b)/2
    if figura == "квадрат":
        res = a * b
    return res
figura = str(input("Ваша фигура(Треугольник, квадрат или круг):"))
if figura == "круг":
    a = float(input("Введите радиус: "))
else:
    a = int(input("Введите сторону а: "))
    b = int(input("Введите сторону b: "))
print(x(figura))
    
